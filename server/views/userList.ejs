<% title = title %>
<div class="container" style="height: 100vh;">
    <div class="container header mt-1">
        <div class="d-flex justify-content-between align-items-center col-md-12 p-3">
            <h3>Users List</h3>
            <div class="d-flex justify-content-between col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search Movies">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2">search</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container users-container mt-3">
        <ul class="list-group list-group-flush">
            <% for (let i = (currentPage - 1) * usersPerPage; i < Math.min(currentPage * usersPerPage, totalUsers); i++) { %>
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="fw-bold m-1"><a href="/users/details">user<%= i + 1 %>@mail.com</a></div>
                    <div class="d-flex justify-content-between">
                        <button class="block m-1"><a href="/users/edit">block</a></button>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
    <div class="container mt-3 d-flex justify-content-center">
        <nav>
            <ul class="pagination">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
</div>

<style>
    a {
        text-decoration: none;
        color: black;
    }

    .active .page-link {
        background-color: #007bff;
        color: white;
    }
    .header{
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }
    .users-container{
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }
    .block{
        border-radius: 50px;
        border: none;
    }
    .block:hover{
        border: 1px solid black;
    }
    li button a{
        padding: 5px;
        font-size: smaller;
        font-weight: bolder;
        text-decoration: none;
    }
    li button a:hover{
        color: black;
    }
</style>
